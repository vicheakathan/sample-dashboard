@model Dashboard.Models.Product

@{
    ViewData["Title"] = "Details";
    ViewData["Header"] = "Products - Details";
}


<hr />


<div class="row mt5" style="margin-top:2rem !important">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4><a asp-action="Index">Back to List</a></h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class = "col-sm-2">
                        @* @Html.DisplayNameFor(model => model.barcode) *@
                        Barcode
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.barcode)
                    </dd>
                    <dt class = "col-sm-2">
                        @* @Html.DisplayNameFor(model => model.category_) *@
                        Category
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.category_.name)
                    </dd>
                    <dt class = "col-sm-2">
                        @* @Html.DisplayNameFor(model => model.name) *@
                        Namae
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class = "col-sm-2">
                        @* @Html.DisplayNameFor(model => model.cost) *@
                        Cost
                    </dt>
                    <dd class = "col-sm-10">
                        @* @Html.DisplayFor(model => model.cost) *@
                        @String.Format("{0:C}", Model.cost)
                    </dd>
                    <dt class = "col-sm-2">
                        @* @Html.DisplayNameFor(model => model.price) *@
                        Price
                    </dt>
                    <dd class = "col-sm-10">
                        @* @Html.DisplayFor(model => model.price) *@
                        @String.Format("{0:C}", Model.price)
                    </dd>
                    <dt class = "col-sm-2">
                        Image
                    </dt>
                    <dd class = "col-sm-10">
                        @{
                            var path = $@"wwwroot\uploads\images\" + Model.image;
                            var fileName = "no_image.png";
                            FileInfo file = new FileInfo(path);
                            if (file.Exists.Equals(true))
                            {
                                fileName = Model.image;
                            }
                        }
                        <img src="~/uploads/images/@fileName" class="rounded-circle1" height="150" width="180" data-toggle="title" style="box-shadow: 1px 1px 5px 0px #a2958a;border-radius:5px">
                    </dd>
                </dl>
                <button class="btn btn-primary tk_button_a">
                    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a>
                </button>
            </div>
        </div>
    </div>
</div>