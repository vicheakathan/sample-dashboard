                        @Html.DisplayNameFor(model => model.email)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.email)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.activation_code)
                    </dt>
                    <dd class = "col-sm-10">
