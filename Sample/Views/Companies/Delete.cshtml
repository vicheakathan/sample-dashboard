@model Dashboard.Models.Company

@{
    ViewData["Title"] = "Delete";
    ViewData["Header"] = "Customer - Delete";
}


<hr>
<div class="row mt5" style="margin-top:2rem !important">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div style="float:right !important;"><h4>Are you sure you want to delete this?</h4></div>
                <h4><a asp-action="Index">Back to List</a></h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class = "col-sm-2">
                        Name
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class = "col-sm-2">
                        Company Name
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.company_name)
                    </dd>
                    <dt class = "col-sm-2">
                        Phone
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.phone)
                    </dd>
                    <dt class = "col-sm-2">
                        Email
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.email)
                    </dd>
                    <dt class = "col-sm-2">
                        Address
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.address)
                    </dd>
                    <dt class = "col-sm-2">
                        Photo
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.logo)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
