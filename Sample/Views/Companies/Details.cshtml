@model Dashboard.Models.Company

@{
    ViewData["Title"] = "Details";
    ViewData["Header"] = "Customer - Details";
}

<hr />

<div class="row mt5" style="margin-top:2rem !important">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4><a asp-action="Index">Back to List</a></h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class = "col-sm-2">
                        Name
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.name)
                    </dd>
                    <dt class = "col-sm-2">
                        Company Name
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.company_name)
                    </dd>
                    <dt class = "col-sm-2">
                        Phone
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.phone)
                    </dd>
                    <dt class = "col-sm-2">
                        Email
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.email)
                    </dd>
                    <dt class = "col-sm-2">
                        Address
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.address)
                    </dd>
                    <dt class = "col-sm-2">
                        Photo
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.logo)
                    </dd>
                </dl>
                <button class="btn btn-primary tk_button_a">
                    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a>
                </button>
            </div>
        </div>
    </div>
</div>