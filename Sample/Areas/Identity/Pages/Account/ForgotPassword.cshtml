@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@*<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />*@
<div class="row" style="display:none">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header"><h4>Forgot your password?</h4></div>
    <div class="card-body">
         <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Enter your email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </div>
        </form>
    </div>
</div>
<div class="mt5 text-muted text-center">
    Already have an account? <a asp-page="./Login">Sign in</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
